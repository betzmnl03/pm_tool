
<div class="container justify-content-center ">
    <h1 class="border-bottom mt-4"> All projects</h1>
    <div class="row mt-4">
    <div class="card new index">
            <div class="card-body text-center mt-4">
            <h3 class="mt-4"><%= link_to("New Project", new_project_path)%>
            </h3>
            <h1 class="text-primary">+</h1>
            </div>
    </div>
    </div>
    <div class="row ml-4">
        <% @projects.each do |project|%>
            <div class="card all index bg-primary col-xs-4-col-sm-11 col-md-5 col-lg-3 col-xlg-3 m-4 border border-primary">
            <div class="card-body text-center">
            <h3 class="mt-4"><%= link_to(project.title, project_path(project.id))%></h3>
            </div>
            </div>
        <%end%>
    </div>
</div>


