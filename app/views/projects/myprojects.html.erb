
<div class="container justify-content-center ">
    <h1 class="border-bottom mt-4"> My projects</h1>
    <div class="row mt-4">
    <div class="card new index">
            <div class="card-body text-center mt-4">
            <h3 class="mt-4"><%= link_to("New Project", new_project_path)%>
            </h3>
            <h1 class="text-primary">+</h1>
            </div>
    </div>
    </div>
    <div class="row border-bottom">
        <% @user_projects.each do |project|%>
            <div class="card all index bg-primary col-xs-11 col-sm-11 col-md-5 col-lg-3 col-xlg-3 m-4 border border-primary">
            <div class="card-body text-center">
            <h3 class="mt-4"><%= link_to(project.title, project_path(project.id))%></h3>
            </div>
            </div>
        <%end%>
    </div>



    <h1 class="border-bottom mt-4"> My Tasks</h1>


    <table class="table table-striped table-sm text-center border small">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">TASKS</th>
      <th scope="col">Project</th>
      <th scope="col">Due Date</th>
      <th scope="col">Status</th>
      <th scope="col">Created By</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
   <%i=1%>
  <% @all_tasks.each do |task|%>
    <tr>
      <td><%=i%></td>
      <%i+=1%>
      <td><%= task.title%></td>
      <td><%= link_to(task.project&.title, project_path(task.project&.id))%></td>
      <td><%= task.due_date%></td>
      <%# note alternate distance_of_time_in_words %>
      <%if task.completed%>
         <td>Complete </td>
      <%else%>
      <td>Inprogress </td>
      <%end%>
       <td><%= task.user&.full_name %></td>
      
     
     
    </tr>

    <%end%>
  </tbody>
</table>
   
    
</div>


